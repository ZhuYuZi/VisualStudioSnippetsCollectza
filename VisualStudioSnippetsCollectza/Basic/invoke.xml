<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>invoke</Title>
      <Shortcut>invoke</Shortcut>
      <Description>安全调用事件的代码片段</Description>
      <Author>筑于梓</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>event</ID>
          <Default>MyEvent</Default>
          <ToolTip>要调用的事件方法</ToolTip>
        </Literal>
        <Literal>
          <ID>DelegateType</ID>
          <Default>EventHandler</Default>
          <ToolTip>委托类型</ToolTip>
        </Literal>
      </Declarations>
      <Code Language="csharp">
        <![CDATA[$DelegateType$ temp = $event$;temp?.Invoke($end$);]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
